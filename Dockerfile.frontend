# Frontend Dockerfile
FROM node:20-slim

WORKDIR /usr/src/app
COPY frontend/package.json frontend/package-lock.json* ./
RUN npm install || true

COPY frontend ./frontend
WORKDIR /usr/src/app/frontend
RUN npm install || true && npm run build

EXPOSE 5173
CMD ["npm", "run", "preview", "--", "--host", "0.0.0.0"]
